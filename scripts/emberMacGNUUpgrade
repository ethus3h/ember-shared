#!/usr/bin/env bash

#set -x

sudo true
temp="$(date +%Y-%m-%d-%H-%M-%S-%N)_$(xxd -pu <<< "$(date +%z)")"
# We can't use emdate because this is needed to install it... :P
trap 'warn "A nonfatal error was reported on ${BASH_SOURCE[0]} line ${LINENO} in $(pwd) at ${temp//-/}."' ERR
brew update
brew install coreutils moreutils findutils gnu-tar gnu-sed gawk gnutls gnu-indent gnu-getopt wdiff rsync tmux gawk md5sha1sum hashdeep git jq pv ncdu bash
brew upgrade # FIXME: I removed wget from the previous line til I have macos 10.11 update installed because openssl fails on 10.10.
sudo pip install --upgrade internetarchive
