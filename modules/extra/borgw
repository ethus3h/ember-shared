#!/usr/bin/env bash
# shellcheck disable=SC1091
source ember_bash_setup &> /dev/null || { printf '%b' '\033[1;31m' >&2; echo "A fatal error was reported on ${BASH_SOURCE[0]} line ${LINENO} in $(pwd): The required dependency ember-shared could not be found (or ember_bash_setup could not be sourced for some other reason)." >&2; printf '%b' '\033[0m' >&2; exit 1; }
#set -x

((EUID)) && exec sudo -- "$0" "$@"

trap 'error-notify "A fatal error was reported on ${BASH_SOURCE[0]} line ${LINENO} in $(pwd) at $(emdate)."; exit 1' ERR

borg config "$(ember-getconf BorgLocation)" append_only 1 || true

action="$1"
shift
case $action in
init)
    mkdir -p "$(ember-getconf BorgLocation)"
    mkdir -p "$(ember-getconf BorgMount)"
    borg init --encryption=repokey "$(ember-getconf BorgLocation)"
    borg config "$(ember-getconf BorgLocation)" append_only 1
    ;;
savequick)
    tempA="$(tempFile)"
    tempB="$(tempFile)"
    tempC="$(tempFile)"
    pwd > "$tempA"
    printf '%s\0' "$@" > "$tempB"
    emdate > "$tempC"
    borg create --stats --progress --list --filter=AME --compression 'lzma,6' "$(ember-getconf BorgLocation)"'::'"$(emdate)" "$tempA" "$tempB" "$tempC" "$@"
    ;;
save)
    tempA="$(tempFile)"
    tempB="$(tempFile)"
    tempC="$(tempFile)"
    pwd > "$tempA"
    printf '%s\0' "$@" > "$tempB"
    emdate > "$tempC"
    borg create --stats --progress --list --filter=AME --compression 'lzma,6' --files-cache disabled "$(ember-getconf BorgLocation)"'::'"$(emdate)" "$tempA" "$tempB" "$tempC" "$@"
    ;;
mount)
    borg mount "$(ember-getconf BorgLocation)" "$(ember-getconf BorgMountpoint)"
    ;;
umount)
    borg umount "$(ember-getconf BorgMountpoint)"
    ;;
status)
    borg info /elements/borg-started-2020m4d7
    - borg check -v -p --verify-data /elements/borg-started-2020m4d7
    tempA="$(tempFile)"
    tempB="$(tempFile)"
    tempC="$(tempFile)"
    pwd > "$tempA"
    printf '%s\0' "$@" > "$tempB"
    emdate > "$tempC"
    borg create --stats --progress --list --filter=AME --compression 'lzma,6' --files-cache disabled "$(ember-getconf BorgLocation)"'::'"$(emdate)" "$tempA" "$tempB" "$tempC" "$@"
    ;;
*)
    echo "Unknown action."
    exit 1
    ;;
esac
