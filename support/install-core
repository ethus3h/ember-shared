#!/usr/bin/env bash

# Should work without ember-shared

trap 'echo "Error installing module"; exit 1' ERR

source support/getDirs

mkdir -p "$emberBindir"
cp scripts/ember_bash_setup_core "$emberBindir"
install -d $(DESTDIR)$(PREFIX)$(datadir)/ember-shared/
cp -r data $(DESTDIR)$(PREFIX)$(datadir)/ember-shared/
